{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bridge",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/bridge",
        "outputPath": "dist/apps/bridge"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/bridge"
        },
        "production": {}
      },
      "dependsOn": ["build-custom-server"]
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bridge:build",
        "dev": true,
        "customServerTarget": "bridge:serve-custom-server"
      },
      "configurations": {
        "development": {
          "buildTarget": "bridge:build:development",
          "dev": true,
          "customServerTarget": "bridge:serve-custom-server:development"
        },
        "production": {
          "buildTarget": "bridge:build:production",
          "dev": false,
          "customServerTarget": "bridge:serve-custom-server:production"
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "bridge:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/bridge"],
      "options": {
        "jestConfig": "apps/bridge/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bridge/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build-custom-server": {
      "executor": "@nrwl/js:tsc",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/bridge",
        "main": "apps/bridge/server/main.ts",
        "tsConfig": "apps/bridge/tsconfig.server.json",
        "clean": false,
        "assets": []
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve-custom-server": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bridge:build-custom-server"
      },
      "configurations": {
        "development": {
          "buildTarget": "bridge:build-custom-server:development"
        },
        "production": {
          "buildTarget": "bridge:build-custom-server:production"
        }
      }
    }
  },
  "tags": []
}
